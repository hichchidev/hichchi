{
  "name": "nest-core",
  "$schema": "/node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nest-core/src",
  "projectType": "library",
  "release": {
    "version": {
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk",
      "preserveLocalDependencyProtocols": false,
      "manifestRootsToUpdate": [
        "{projectRoot}",
        "dist/{projectRoot}"
      ]
    }
  },
  "tags": [
    "nest-core"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        }
      ],
      "options": {
        "rootDir": "libs/nest-core/src",
        "outputPath": "dist/libs/nest-core",
        "tsConfig": "libs/nest-core/tsconfig.lib.json",
        "packageJson": "libs/nest-core/package.json",
        "main": "libs/nest-core/src/index.ts",
        "assets": [
          "libs/nest-core/*.md"
        ],
        "generatePackageJson": true,
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "typedoc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typedoc --options ./libs/nest-core/typedoc.json",
        "outputPath": [
          "dist\\docs\\libs\\nest-core"
        ]
      }
    }
  }
}
