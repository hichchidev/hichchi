{
  "name": "nest-connector",
  "$schema": "/node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nest-connector/src",
  "projectType": "library",
  "release": {
    "version": {
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk",
      "preserveLocalDependencyProtocols": false,
      "manifestRootsToUpdate": [
        "{projectRoot}",
        "dist/{projectRoot}"
      ]
    }
  },
  "tags": [
    "nest-connector"
  ],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        }
      ],
      "options": {
        "main": "libs/nest-connector/src/index.ts",
        "additionalEntryPoints": [
          "libs/nest-connector/src/auth/auth.ts",
          "libs/nest-connector/src/crud/crud.ts"
        ],
        "format": [
          "esm",
          "cjs"
        ],
        "generateExportsField": true,
        "assets": [
          {
            "glob": "*.md",
            "input": "libs/nest-connector",
            "output": "."
          }
        ],
        "tsConfig": "libs/nest-connector/tsconfig.lib.json",
        "outputPath": "dist/libs/nest-connector",
        "generatePackageJson": true,
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "fix-dts-slashes": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node tools/scripts/fix-dts-slashes.js nest-connector"
        ],
        "parallel": false
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "typedoc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typedoc --options ./libs/nest-connector/typedoc.json",
        "outputPath": [
          "dist\\docs\\libs\\nest-connector"
        ]
      }
    }
  }
}
