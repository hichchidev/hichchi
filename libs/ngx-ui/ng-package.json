{
  "$schema": "/node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/ngx-ui",
  "lib": {
    "entryFile": "src/index.ts"
  },
  "assets": [
    {
      "glob": "**/*.css",
      "input": "src/lib/styles",
      "output": "styles"
    },
    {
      "glob": "**/*.scss",
      "input": "src/lib/styles",
      "output": "styles"
    }
  ]

}
